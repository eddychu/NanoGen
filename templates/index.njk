{% extends "layout-default.njk" %}

{% block content %}
<ul class="list-disc">
{% for post in posts %}
     <li>
     <h1 class="font-sans break-normal pt-6 pb-2 text-1xl">
        <a href={{post.type + "/" + post.slug}} class="underline hover:text-gray-800 text-gray-900">
        {{ post.title }}</a>
        </h1>
    </li>
{% endfor %}
</ul>
{% endblock %} 

